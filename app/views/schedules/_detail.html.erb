<div id="schedule-detail-modal" style="position: fixed; top: 20%; left: 30%; background: white; border: 1px solid #ccc; padding: 20px; z-index: 1000; max-height: 80vh; overflow-y: auto; border-radius: 8px; width: 320px;">
  <p><strong>患者:</strong> <%= schedule.client.name %></p>
  <p><strong>担当者:</strong> <%= schedule.user.name %></p>
  <p><strong>住所:</strong> <%= schedule.client.address %></p>
  <p><strong>開始時刻:</strong> <%= schedule.start_time.strftime("%H:%M") %></p>
  <p><strong>終了時刻:</strong> <%= schedule.end_time.strftime("%H:%M") %></p>

  <% if schedule.client.addition.present? %>
    <p><strong>加算情報:</strong><br><%= simple_format(schedule.client.addition) %></p>
  <% end %>

  <% if schedule.memo.present? %>
    <p><strong>メモ:</strong><br><%= simple_format(schedule.memo) %></p>
  <% end %>

  <!-- 編集フォームはここにだけ表示されるようにします -->
  <div id="edit-schedule-modal" hidden></div>

  <!-- ボタン群 -->
  <div class="modal-footer">
    <button onclick="document.getElementById('schedule-detail-modal').style.display='none'">閉じる</button>
    <button class="edit-schedule-button" data-id="<%= schedule.id %>">編集する</button>
    <button class="delete-schedule-button" data-id="<%= schedule.id %>" style="color: red;">削除する</button>
  </div>
</div>